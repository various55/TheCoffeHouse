    @section MyJs{
        <script>
            var btnFindByCategory = $('.findByCategory');
            btnFindByCategory.click((e) => {
                e.preventDefault()
                console.log(e.target.name);
                var id = e.target.name;
                if(id<0)
                    $.ajax({
                        url: "/Products/Products",
                        data: {
                        },
                        success: (response) => {
                            $('#products').html(response);
                        },
                        error: (response) => {
                        }
                    })
                if (id > 0)
                    $.ajax({
                        url: "/Products/FindByCategory",
                        data: {
                            id: id
                        },
                        success: (response) => {
                            $('#products').html(response);
                        },
                        error: (response) => {
                        }
                    })
            });
        </script>
    }
