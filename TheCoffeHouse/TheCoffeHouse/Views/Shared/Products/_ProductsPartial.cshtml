@model Business.ModelView.ResponseData<Data.EF.Product>
<!--Products-->
@if (Model.data.Count < 1)
{
    <div class="content">
        <span class="text-bold">Không có sản phẩm nào được hiển thị</span>
    </div>
}
else
{
    foreach (var item in Model.data)
    {
        <div class="col-lg-4 col-md-6 col-12 ">
            <div class="single-product border">
                <div class="product-img">
                    <a href="product-details.html">
                        <img class="default-img rounded" src="@item.image" alt="#">
                        <img class="hover-img rounded" src="@item.image" alt="#">
                    </a>
                    <div class="button-head">
                        <div class="product-action">
                            <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                            <a title="Wishlist" href="#"><i class=" ti-heart "></i><span>Add to Wishlist</span></a>
                            <a title="Compare" href="#"><i class="ti-bar-chart-alt"></i><span>Add to Compare</span></a>
                        </div>
                        <div class="product-action-2">
                            <a title="Add to cart" class="btn-add-Cart" href="#">Add to cart</a>
                        </div>
                    </div>
                </div>
                <div class="product-content text-bold">
                    <h3><a href="product-details.html">@item.name</a></h3>
                    <div class="product-price text-blue">
                        <p>Giá tiền: @item.price $</p>
                    </div>
                </div>
            </div>
        </div>
    }
}
<div class="container-fluid">
    <nav aria-label="Page navigation example">
        <ul id="pagination" class="pagination justify-content-end">
            @{
                var isPrevious = "page-item";
                var pageNumber = Model.pageNumber;
                if (pageNumber == 1)
                {
                    isPrevious = "page-item disabled";
                }
                <li class="@isPrevious">
                    <a class="page-link control" href="#products" tabindex="-1" name="@(Model.pageNumber==1?1:Model.pageNumber - 1)">Previous</a>
                </li>
                var pageCount = Model.pageCount;
                for (var i = 1; i <= pageCount; i++)
                {
                    <li class="page-item"><a class="page-link" href="#products" name="@i">@i</a></li>
                }
                var isNext = "page-item";
                if (pageNumber == Model.pageCount)
                {
                    isNext = "page-item disabled";
                }
                <li class="@isNext">
                    <a class="page-link control" href="#products" name="@(Model.pageNumber==Model.pageCount?Model.pageCount:Model.pageNumber+1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>

<!--End Products-->
